# Supabase Configuration
# Get these from your Supabase Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Connection (Supabase PostgreSQL)
# Get this from Supabase Project Settings > Database > Connection pooler (Transaction mode) works best typically, or Session mode if using Prisma direct connection
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Email Configuration (for Contact Form)
# Options: 'resend' or 'smtp' (defaults to logging if not set)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_123456789
EMAIL_FROM=onboarding@resend.dev
# Email address where contact form submissions will be sent
ADMIN_EMAIL=marile@example.com

# specific SMTP settings if EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=password

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000

# DigitalOcean Spaces (S3 Compatible)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_KEY=your-access-key
DO_SPACES_SECRET=your-secret-key
DO_SPACES_BUCKET=your-bucket
NEXT_PUBLIC_DO_SPACES_CDN_URL=https://your-bucket.nyc3.cdn.digitaloceanspaces.com
